<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenAnalyser" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>  <!-- Cor roxa -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>  <!-- Cor do texto nos itens primários -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>  <!-- Cor do texto nos itens secundários -->

        <!-- Cor da barra de status (onde ficam as notificações) -->
        <item name="android:statusBarColor">@color/black</item> <!-- Cor roxa -->

        <!-- Cor da barra de navegação (onde ficam os botões) -->
        <item name="android:navigationBarColor">@color/purple_500</item> <!-- Cor roxa -->

        <!-- Personalizações adicionais -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme for Material3 (Light Mode) -->
    <style name="Base.Theme.ScreenAnalyser" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/black</item> <!-- Cor primária roxa -->
    </style>
</resources>