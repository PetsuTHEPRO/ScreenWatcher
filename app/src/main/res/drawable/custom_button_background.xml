<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="#FFFFFF"/> <!-- Branco -->

    <!-- Bordas arredondadas -->
    <corners android:radius="18dp"/> <!-- Quanto maior, mais arredondado -->

    <!-- Borda opcional -->
    <stroke
        android:width="1dp"
        android:color="#1E1E2A"/> <!-- Cor da borda -->
</shape>